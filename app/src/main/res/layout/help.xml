<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/button"
        android:padding="16dp">

        <ImageView
            android:id="@+id/arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:id="@+id/txv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/arrow_back"
            android:text="Request help"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>
    <ImageView
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="270dp"
        android:src="@drawable/avata"
        />
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="How can we help you ?"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginLeft="63dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="It looks like you are experiencing problems with our sign up process. We are here to help so please get in touch with us"
        android:textAlignment="center"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="57dp"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="35dp"
        android:background="@drawable/layout_bg_setting"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="48dp"
            android:src="@drawable/email"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact email: app@gmail.com"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/button"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/layout_bg_setting"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="48dp"
            android:src="@drawable/email"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact email"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/button"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_marginTop="-340dp"
        android:layout_marginLeft="230dp"
        android:background="@drawable/layout_bg_setting"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="48dp"
            android:src="@drawable/hotline"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hotline 19009999"
            android:textAlignment="center"
            android:layout_marginTop="25dp"
            android:textColor="@color/button"
            android:textStyle="bold"
            />
    </LinearLayout>
</LinearLayout>