<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="362dp"
            android:layout_marginBottom="235dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="102dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="100dp"
            android:src="@drawable/logoapp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="64dp"
            android:gravity="center"
            android:text="Money App"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="33dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="140dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="140dp"
            android:layout_marginBottom="17dp"
            android:text="Phiên bản 1.0.0"
            android:textAlignment="center"
            android:textSize="15dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="185dp"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:src="@drawable/guide"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Hướng dẫn"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="185dp"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:layout_marginLeft="225dp"
        android:layout_marginTop="-130dp"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:src="@drawable/support"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_marginTop="13dp"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Hỗ trợ"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/facebook"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="60dp"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/facebookicon"/>
        <TextView
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="5dp"
            android:text="Theo dõi chúng tôi trên Facebook"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/instagram"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/instagramicon"/>
        <TextView
            android:layout_width="180dp"
            android:layout_height="25dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="13dp"
            android:text="Theo dõi trên instagram"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/twitter"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/twitter"/>
        <TextView
            android:layout_width="180dp"
            android:layout_height="25dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="13dp"
            android:text="Theo dõi trên Twitter"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/group"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/groupguide"/>
        <TextView
            android:layout_width="180dp"
            android:layout_height="25dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="13dp"
            android:text="Tham gia nhóm"
            android:textColor="@color/black"
            />
    </LinearLayout>
</LinearLayout>