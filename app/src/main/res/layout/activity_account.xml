<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AccountActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:background="@drawable/iku" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/layout_avt"
                android:src="@drawable/ic_person_24" />

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="85dp"
                android:background="@drawable/layout_camera"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_camera"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_camera_alt" />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:textAlignment="center"
            android:text="@string/Person_info"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            />
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical">
        <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="57dp"
                android:text="@string/User_name"
                android:textSize="17dp" />
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/iconname"
            android:layout_marginLeft="10dp"
            />

         <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtFullName"
             android:layout_width="330dp"
             android:layout_height="40dp"
             android:layout_marginLeft="57dp"
             android:layout_marginTop="-22dp"
             android:textColor="@color/black" />
     </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            >
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="57dp"
                android:text="@string/Phone_number"
                android:textSize="17dp" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/iconphone"
                android:layout_marginLeft="10dp"
                />

            <com.google.android.material.textfield.TextInputEditText

                android:layout_width="330dp"
                android:layout_height="40dp"
                android:layout_marginLeft="57dp"
                android:layout_marginTop="-22dp"
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            >
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="57dp"
                android:text="@string/date"
                android:textSize="17dp" />
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/iconbirthday"
                android:layout_marginLeft="10dp"
                />

            <com.google.android.material.textfield.TextInputEditText

                android:layout_width="330dp"
                android:layout_height="40dp"
                android:layout_marginLeft="57dp"
                android:layout_marginTop="-22dp"
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            >
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="57dp"
                android:text="Email "
                android:textSize="17dp" />
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/email_icon"
                android:layout_marginLeft="10dp"
                />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tv_email"
                android:layout_width="330dp"
                android:layout_height="40dp"
                android:layout_marginLeft="57dp"
                android:layout_marginTop="-22dp"
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="20dp"
            android:layout_height="50dp">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/button1"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="@color/button"
                app:cornerRadius="15dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_update"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/button"
                android:layout_marginLeft="15dp"
                android:text="@string/update"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:cornerRadius="15dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>